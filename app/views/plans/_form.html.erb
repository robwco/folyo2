<%= form_for @plan do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :stripe_id, 'Stripe ID' %><br>
    <%= f.text_field :stripe_id %>
  </div>
  <div class="field">
    <%= f.label :name, 'Name (visible to customers)' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :amount, 'Price (in cents)' %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :interval %><br>
    <%= f.collection_select :interval, ['month','year'], :to_s, :to_s, {promt: "Choose an interval"} %><br>
  </div>
  <div class="field">
    <%= f.label :trial_period_days, 'Trial period length (in days)' %><br>
    <%= f.text_field :trial_period_days %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
