<div>
<%= form_for([@reply, @message]) do |f| %>
	<h4 style="margin:2em auto 0;">Send <%= first_name name %> a message</h4>
	
	<div class="textarea-wrap">
		<%= f.text_area :message, :placeholder => "Write your message...", :autofocus => "true", :style => "height: auto;" %>
	</div>

	<span style="float: right; margin-top: -6em;">
		<%= f.submit "Send message", class: "button", style: "margin: 0 0 6em;" %>
		<% if @reply.project.user == current_user %>
			<!--<span style="margin:0 .5em">or</span>
			<a href="#">Dismiss</a>-->
		<% end %>
	</span>
<% end %>
</div>

