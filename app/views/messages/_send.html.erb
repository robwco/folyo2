<script>
  $(document).ready(function(){
    $('textarea').autosize();
  });
</script>

<%= form_for([@reply, @message]) do |f| %>
	<%= f.text_area :message, placeholder: "Type your message here...", :autofocus => "true", :style => "height: auto; max-width: 100% !important; margin: .5em 0; min-height: 150px;" %>

	<%= f.submit "Send message", class: "button", style: "margin: 0;" %>
<% end %>



