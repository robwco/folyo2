<script>
$(document).ready(function(){
  $('textarea').autosize();
});
</script>

<div class="admin-center-bg" style="padding: 1em 0 4em; background-color: #e6d6ec;  background-image: url(<%= asset_path 'struckaxiom.png' %>); background-size: 50px;">

	<h2 style="text-align:center; margin: 0; padding: 1em 0 0;">
		<%= image_tag('sparkles.png', :style => "width:30px; vertical-align: bottom;") %> Welcome to the super dope new Folyo Admin Center! <%= image_tag('sparkles.png', :style => "width:30px; vertical-align: bottom;") %></h2>

		<div style="background-color: #d8b8e6; width:30px; height:3px; display: table; margin:1em auto 0;"></div>
	
		<% if @review_projects.present? %>
			<div style="background-color: #d8b8e6; width:3px; height:50px; display: table; margin:0 auto 1em;"></div>
	
			<div style="text-align:center; margin: 1em 0;">
				<small style="letter-spacing: .125em; color: #8d7699;">PROJECTS AWAITING YOUR ALMIGHTY REVIEW!</small>
			</div>

			<div class="admin-center-wrap" style="width: 860px; padding: 0; margin: 0 auto; display: table; box-shadow: 0px 0px 8px #d8b8e6; border-radius: 7px; background: #FFF;">
				<div  class="project-list-wrap">
				  <% @review_projects.each do |project| %>
				    <%= render "projects/quick_view", project: project %>
				  <% end %>
				</div>
			</div>
		<% end %>

		<div style="background-color: #d8b8e6; width:3px; height:50px; display: table; margin:0 auto 1em;"></div>

		<div style="text-align:center; margin: 1em 0;">
			<small style="letter-spacing: .125em; color: #8d7699;">SEND FOLYO USERS AN EMAIL</small>
		</div>

		<div class="admin-center-wrap" style="width: 860px; box-sizing:border-box; padding: .5em 2em 1em; margin: 0 auto; display: table; box-shadow: 0px 0px 8px #d8b8e6; border-radius: 7px; background: #FFF;">

			<%= render 'announcements/form' %>
		</div>


	<div style="background-color: #d8b8e6; width:3px; height:50px; display: table; margin:1em auto;"></div>

	<div style="text-align:center; margin: 1em 0;">
		<small style="letter-spacing: .125em; color: #8d7699;">ALL PROJECTS POSTED ON FOLYO</small>
	</div>

		<div class="admin-center-wrap" style="width: 860px; box-sizing:border-box; padding: 1em; margin: 0 auto; display: table; box-shadow: 0px 0px 8px #d8b8e6; border-radius: 7px; background: #FFF;">
		  <div  class="project-list-wrap">
		    <% @projects.each do |project| %>
		      <%= render "projects/quick_view", project: project %>
		    <% end %>
		  </div>
  
		  <div style="text-align:center">
		    <%= will_paginate @projects, previous_label: '<i class="fa fa-long-arrow-left" aria-hidden="true"></i>Back'.html_safe, next_label: 'Forward<i class="fa fa-long-arrow-right" aria-hidden="true"></i>'.html_safe %>
		  </div>
	</div>


	<div style="background-color: #d8b8e6; width:3px; height:50px; display: table; margin:1em auto;"></div>
	
	<h2 style="text-align:center;">
	<%= image_tag('wave.png', :style => "width:40px; vertical-align: middle;") %>  <%= link_to "Log out, bye-bye", destroy_user_session_path, method: :delete %>
	</h2>

</div>