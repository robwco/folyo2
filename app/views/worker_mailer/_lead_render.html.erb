<% @exclusives.most_recently_updated.this_week.each do |exclusive| %>
  <div class="exclusive">
    <div class="image-wrap"><%= image_tag exclusive.pic.url(:thumb, timestamp: false), :class => "image" %></div>
    <h4><%= exclusive.title %></h4>
    <h5><%= exclusive.category %></h5>
		<p>
	    <strong>Name:</strong> <%= exclusive.name %><br>
	    <strong>Company:</strong> <a href="<% exclusive.website %>"><%= exclusive.website %></a><br>
	    <strong>Budget:</strong> $<%= exclusive.budget %>
		</p>
    <p><strong>Description</strong><br>
    <%= h(exclusive.description).gsub(/\n/, '<br/>').html_safe %></p>
		<h4>This lead was posted exclusively to Workshop, so you have a great chance of landing it.</h4>
    <p><strong>To apply</strong><br>
    <a class="email" href="MAILTO:<%= exclusive.email %>"><%= exclusive.email %></a></p>

  </div>
<% end %>


<% @leads.group_by(&:category_name).each do |category, leads| %>
<%= render :partial => 'worker_mailer/lead_display', :locals => { :category => category, :leads => leads }   %>
<% end %>
