	border-radius: 5px;
	padding: .5em .75em;
	display: inline-block;
	margin: 1em 0;
	text-decoration: none;
}
h1, h2, h3 {
	line-height: 1.2;
}
h3 {
	margin: 1em 0 .25em;
}

.checklist p table {
	font-size: 12px;
	line-height: 25px;
}

.checklist td {
	padding: 0 1em 0 1em;
}

.checklist {
	font-size: 10px;
	line-height: 25px;
	padding: .5em 2em 1em;
	box-sizing: border-box;
	width: 100%;
	border-radius: 5px;
	margin: 1em 0 2em;
	border: 2px solid #d9d3cf;
}

.checklist h3 {
	font-size: 150%;
	margin: 1em 0 1em 0;
}

.checklist strike {
	color: #9e9890;
	margin: 0 0 0 10px;
	vertical-align: 4px;
}

.checklist a {
	margin: 0 0 0 10px;
	vertical-align: 4px;
}

td {
	padding: .5em 0;
}

table a {
	text-decoration: none;
}

p {
	font-size: 15px;
	line-height: 21px;
	margin:1em 0px;
}
.image-wrap .image {
	width: 75px;
	border-radius: 75px;
}
.photo {
	width: 60px; 
	border-radius: 75px;
	margin: 0 10px 0 0;
}

.name , .email a {
	color: #444;
	
}
.twitter a {
	color: #9e9890;
	font-size: 75%;
}

.small {
	color: #9e9890;
	font-size: 13px;
}
.small a {
	font-size: 11px;
	text-decoration: none;
	font-weight: 600;
}
.guide {
	padding: 1.5em 2em; 
	background-color: #9e9890; 
	color: #FFF;
	box-sizing: border-box;
	width: 136px; 
	height: 120px; 
	line-height: 1.5em; 
	font-size: 14px; 
	font-weight:bold;
	vertical-align: 
	middle; float: 
	left; display: 
	inline-block; 
	margin: 1em 1em .5em 0;
	border-radius: 5px;
}
hr {
	width: 100%;
	margin-left: auto;
	margin-right: auto;
	height: 1px;
	background-color:#D9D3CF;
	border: 0;
	box-sizing: border-box;
}

.exclusive h4 {
	background-color: #f3e1ab;
	padding: .35em .75em;
	border-radius: .2em;
}
.exclusive {
margin: .5em 0 1em;
}
</style>
</head>
