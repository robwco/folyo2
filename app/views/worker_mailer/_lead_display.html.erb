
  <% leads.each do |lead| %>
  	<p class="lead-title" style="line-height: 1.3;"><strong><%= lead.title %></strong></p>

		<p class="lead-url"> Original Source: <a href="<%= lead.url %>" style="color: #666;"><%= lead.url %></a></p>
			
		<p style="margin: .5em 0 0;"><%= simple_format(lead.description) %></p>


		
			<% if lead.image.file? %>
				<%= image_tag lead.image.url(:medium, timestamp: false), :style => "width: 50px; height: 50px; border-radius: 65px; margin: 1em 0 0;"  %>
			<% else %>
			<% end %>
			
		<p style="font-size: 16px; margin: .5em 0;"> 
			Name: <%= lead.name %>
			<br>Email: <%= mail_to lead.email %>
			<br>
		</p>

		<p style="padding: 1em 0 0;">
			<a href="https://app.letsworkshop.com/leads/<%= lead.id %>/favorite?type=favorite" class="favorite">Favorite</a> <em class="small">Leads you favorite get added to your follow-up list.</em>
		</p>
					
		<p style="border-bottom: 1px solid #ccc; padding-bottom: 1em;">
			<span style="color: #666; font-size: 14px;">Posted on <%= lead.created_at.strftime("%b. %d %Y") %> in <%= lead.category_name %> <span style="font-size: 12px;">

			<a href="<%= update_subscription_categories_url %>?category_id=<%= category.id %>" style="color: #a23f06; margin-left: .5em; font-weight: 600;">Don't send me this category</a></span></span> 
		</p>
  <% end %>