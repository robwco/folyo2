<div class="category-wrap">
	<h3>Latest <%= category %> leads:</h3>
	
	<% leads.each do |lead| %>
	  <div class="exclusive">
	    <div class="image-wrap"><%= image_tag lead.image.url(:medium, timestamp: false), :class => "image" %></div>
	    <h1><%= lead.title %></h1>
	    <h2><%= lead.notes %></h2>
	    <p>
	    	<strong>Name:</strong> <%= lead.name %><br>
				<strong>Company:</strong> <a href="<% lead.website %>"><%= lead.website %></a><br>
	    	<strong>Budget:</strong> $<%= lead.budget %><br>
					<a href="<%= lead.url %>">View Posting</a> <% if lead.twitter.present? %> | <a href="<%= lead.twitter %>">Twitter</a><% end %> <% if lead.linkedin.present? %>| <a href="<%= lead.linkedin %>">Linkedin</a> <% end %> | <a href="MAILTO:yourfriend@email.com?subject=looking for work?&body=Hey there! I’m in Workshop (http://www.letsworkshop.com a service that sends me freelance leads) and I came across this one that I thought you’d be perfect for:%0D%0A
						%0D%0A<%= lead.title %> - <%= lead.url %>%0D%0A %0D%0A
					What you think?	">Send to a friend</a>
			</p>

	

	    <p><strong>Description</strong><br>
	    <%= h(lead.notes).gsub(/\n/, '<br/>').html_safe %>
	
	
		
	</p>
		 	<p><strong>To apply</strong><br>
		    <a class="email" href="MAILTO:<%= lead.email %>"><%= lead.email %></a><br>
				<% if lead.notes.present? %><%= lead.notes %><% end %>
			</p>
	  </div>
	<% end %>
</div>

