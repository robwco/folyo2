
  <% leads.each do |lead| %>
  	<p class="lead-title" style="line-height: 1.3;"><strong><%= lead.title %></strong></p>

		<p class="lead-url" style="color: #666;"> <img src="http://www.google.com/s2/favicons?domain_url=<%= lead.url %>" align="left" style="margin-right: .5em; padding: 3px 0 0;"> <a href="<%= lead.url %>" style="color: #666;"><%= lead.url %></a></p>
			
		<p style="margin: .5em 0 0;"><%= simple_format(lead.description) %></p>
		
			<% if lead.image.file? %>
				<%= image_tag lead.image.url(:medium, timestamp: false), :style => "width: 50px; height: 50px; border-radius: 65px; margin: 1em 0 0;"  %>
			<% else %>
			<% end %>
			
		<p> 
			Name: <%= lead.name %>
			<br>Email: <%= mail_to lead.email %>
			<br>
		</p>

		<p style="margin: 2em 0;">
			<a href="https://app.letsworkshop.com/leads/<%= lead.id %>/favorite?type=favorite" class="button">Add to Your Follow-up List</a><br> (This means I'll remind you to follow-up with this lead once a week in a separate email.)
		</p>
					
		<p class="lead-posted-on">
			<span style="color: #666;">Posted on <%= lead.created_at.strftime("%b. %d %Y") %> in <%= lead.category_name %>

			&larr; <a href="<%= update_subscription_categories_url %>?category_id=<%= category.id %>" style="color: #666; font-size: 10px;">Don't send me this category</a></span>
		</p>
  <% end %>