html, body {
		max-width: 100%;
		padding: 3px;
		width: 55em; 
		max-width: 100%;
		margin: auto; 
		padding: 3px;
		box-sizing: border-box;
		padding: 3px 10px;
	}

html, body, p  {
	color: #222; 
	font-size:13px; 
	line-height: 18px; 
	font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}

h3 {
	font-size: 10px;
	letter-spacing: .075em;
	text-transform: uppercase;
	color: #a03f14; 
	border-bottom: 1px solid #ccc; 
	padding: .5em 0 0;
}

.to-contact, .contacted, .following-up, .staying-in-touch {
	font-size: 9px;
	text-transform: uppercase;
	font-weight: bold;
	display: inline-block;
	padding: 0 .5em;
	border-radius: 7px;
	letter-spacing: .05em;
}

.to-contact {
	background-color: #fffbb4;
}

.contacted {
	background-color: #ffd4d1;
}

.following-up {
	background-color: #d9fde0;
}

.staying-in-touch {
	background-color: #d1e9ff;
}


.follow-up-list-table th p {
	font-size: 13px; 
	text-align: left;
	padding: .5em 1em .25em; 
	margin:  0; 
	text-transform: uppercase; 
	border-radius: 5px; 
	margin-left: -1.5em
}

.leads-index-wrapper td {
	border-bottom: 1px solid #ccc; 
	padding: 0 0 1em;
}

.leads-index-wrapper td p.lead-title {
	margin: 1em 0 0;
}

.leads-index-wrapper td p.lead-url {
	color: #666;
	margin: .25em 0;
	white-space: nowrap; 
	overflow: hidden; 
	text-overflow: ellipsis;
	max-width: 700px;
}

p.lead-posted-on {
	border-bottom: 1px solid #ccc; 
	padding-bottom: 1em;
}

.followup-list-action-button {
		background-color: #eaeae9;
		border-radius: 4px;	
		color: #222;
		cursor: pointer;
		margin: 0 0 0 .5em;
		padding: 0 .25em .125em;
		text-decoration: none;
		outline: none;
		font-size: 12px;
		vertical-align: 2px;
	  -webkit-transition: all 0.2s ease;
	  -moz-transition: all 0.2s ease;
	  -ms-transition: all 0.2s ease;
	  transition: all 0.2s ease;

}

a.follow-up-list-action-button:hover {
		color: white;
		background-color:  #eaeae9 !important;
}


.followup-list-action-button.yellow {
	background-color: #fffcb0;
	color: #222;
}

.followup-list-action-button.red  {
	background-color: #ffddda;
	color: #222;
}


.followup-list-action-button.green {
	background-color: #daffe1;
	color: #222;
}

.followup-list-action-button.blue {
	background-color: #d1e9ff;
	color: #222;
}

.follow-up-list-actions-box {
	float: right; 
	display: inline-block; 
	margin-top: -7.75em;
	width: 400px;
	line-height: .5;
	color: #666; font-size: 14px;
}


.button {
		font-size: 12px;
		text-transform: uppercase;
		font-weight: 500;
		color:#666;
		letter-spacing: .05em;
	  border-radius: 7px;
	  padding: 5px 14px 5px;
	  margin: 0 0 .5em;
	  display: inline-block;
		text-align: center;
		text-decoration: none;
		background-color: #eee;
		cursor: pointer;
		outline: none;
		border: none;
	  -webkit-transition: all 0.2s ease;
	  -moz-transition: all 0.2s ease;
	  -ms-transition: all 0.2s ease;
	  transition: all 0.2s ease;
	}
.button:hover {
			background-color: #e66125; 
			color: white;
		}


