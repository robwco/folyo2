<h2>Upgrade to Yearly</h2>

<%= form_for(current_user, url: upgrade_plan_path, html: { method: :put }) do |f| %>
  <% if current_user.subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.subscription.errors.count, "error") %> prohibited your upgrade from being saved:</h2>

      <ul>
      <% current_user.subscription.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  It only costs $<%= @yearly_plan.price %> per <%= @yearly_plan.interval %>!
  </p>

  <div class="actions">
    <%= f.submit "Upgrade your plan" %>
  </div>

<% end %>
