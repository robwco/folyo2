<h2>How are you doing in Workshop?</h2>
<%= hidden_field_tag("user[milestone_ids][]", nil) %>

<table class="lead-category">
	<% Milestone.all.each do |m| %>
		<tr>
			<td style="text-align:center; vertical-align: top; padding:10px 0; width: 50px; height: 100%;">
				<%= check_box_tag "user[milestone_ids][#{m.id}]", m.id, @user.milestone_ids.include?(m.id), :name => "user[milestone_ids][]" %>
			</td>
			<td style="vertical-align: top; padding-right:0px;">
				<p style="margin:0; padding:0; font-size:1.5em"><%= label_tag "user_milestone_ids_#{m.id}", m.description, :style => "text-transform:none;font-size:1em" %></p>
			</td>
		</tr>
	<% end %>
</table>
