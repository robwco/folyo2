<h2 style="text-align:center;margin: 1em 0 0;">
	<%= image_tag @project.user.company_logo.url, :style => "width:60px; border-radius:0px; vertical-align: -10px; margin-right: 0px;" %>
</h2>

<h1 class="post-title"><%= @project.title %></h1>

<p class="by-line">
	<%= image_tag @project.user.photo.url, :class => "photo" %> <%= @project.user.name %>, <a href="<%= @project.user.company_website %>"><%= @project.user.company_name %></a>
</p>


<div class="wrap800 project-listing" style="border-top: 0; max-width: 600px; padding: 0; margin: 0em auto 0;">
	<p><%= @project.goals %></p>

  <%= @project.long_description_html.html_safe %>

	
	<p><strong>We think this project should cost around $<%= @project.budget %>.</strong></p>
	<!-- <%= render "projects/profile_card" %>-->
</div>
