<div class="project-listing">
	<div class="info">
		<a href="<%= project.published? ? url_for(project) : project_wizard_step_url(project) %>">
			<%= truncate project.title, length: 55 %> <%= "(draft)" unless project.published? %>
		</a>
		
		<% if admin_signed_in? %>
		  <%= link_to 'Remove',  project,  method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :style => "padding: 0px 5px 1px !important; font-size: 13px; margin: .25em; background-color: #dd8687;" %>
		<% end %>

		<br>
		<%= truncate project.goals, length: 125 %> <%= "(not published)" unless project.published? %><br>
		
		<div class="skills">
			Needed:  
      <% project.categories.each do |category| %>
        <a class="badge" href="<%= home_projects_path(category_id: category.id) %>"><%= category.name %></a> 
      <% end %>
		</div>
	</div>
	
	<div class="client-profile" style="margin: -.5em 0 0;">
		<div class="avatar">
      <% if project.user.company_logo? %>
        <%= image_tag(project.user.company_logo.url, class: "photo") %>
      <% else %>
        <%= image_tag(project.user.photo.url, class: "photo") %>
      <% end %>
		</div>
	
		<div class="client-info">
			<p style="line-height: 1;">
				<small><strong><%= project.user.name %></strong><br>
				<%= truncate project.user.company_name, length: 17 %></small>
			</p>
		</div>
	</div>
	
	<div class="status">				
		<% unless project.published? %> 
			<span style='color:#7b8d99;'><i style='color: #4e9fc4;' class='fa fa-pencil' aria-hidden='true'></i> Draft</span><br>
		<% else %>
			<% if	user_signed_in? %>
				<% if Project.owned_by(current_user) %>
					<span style="color:#7b8d99;"><%= project.replies.count %> Replies</span>
			
				<% else %>
					<span style="color:#7b8d99;"><i style="color: #86d259;" class="fa fa-check-circle" aria-hidden="true"></i> Seeking Freelancers</span><br>
					<!--<i style="color: #86d259;" class="fa fa-check-circle" aria-hidden="true"></i> Accepted, In Progress<br>
					<span style="color: #8C3622;">Completed</span><br>
					<span style="color: #666;">5 replies</span><br>-->
				<% end %>
			<% end %>			
		<% end %>
	</div>
</div>
		





	
