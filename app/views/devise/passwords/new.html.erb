<div class="wrapper" style="max-width: 15em; padding: 2em 0 0;">

<h2>Can't sign in? Forgot your password?</h2>
<p>Enter your email address below and I'll send you password reset instructions.</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Your email address" %>
  </div>

  <div class="actions" style="margin-bottom: 3em;">
    <%= f.submit "Send me reset instructions", :style => "margin-left: 0;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>