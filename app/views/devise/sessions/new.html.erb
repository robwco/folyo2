<% if params[:project_id] %>
	<div class="my-8 max-w-xl p-8">
		<p>Sign in</p>
		
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field">
				<%= f.email_field :email, autofocus: true, :placeholder => "Email" %><br>
				<%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
				<%= render "devise/shared/links" %>
			</div>

			<div class="actions" style="margin: 1em 0 .5em;">
				<%= f.submit "Log in", :style => "margin-left: 0;" %>
			</div>

			<% if devise_mapping.rememberable? -%>
					<%= f.check_box :remember_me, :style => "margin-right: .6em;" %>

					<%= f.label "Remember me on this computer", :style => "font-size: 14px; font-weight: normal; text-transform: none; letter-spacing: 0;" %>
			<% end -%>
		<% end %>
	</div>
<% else %>
	<div>
		<h1 style="margin: 2.5em 0 .5em; text-align: left;">Log in</h1>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field">
				<%= f.email_field :email, autofocus: true, :placeholder => "Email" %><br>
				<%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
				<%= render "devise/shared/links" %>
			</div>

			<div class="actions" style="margin: 1em 0 .5em;">
				<%= f.submit "Log in", :style => "margin-left: 0;" %>
			</div>

			<% if devise_mapping.rememberable? -%>
					<%= f.check_box :remember_me, :style => "margin-right: .6em;" %>

					<%= f.label "Remember me on this computer", :style => "font-size: 14px; font-weight: normal; text-transform: none; letter-spacing: 0;" %>
			<% end -%>
		<% end %>

		<hr style="margin: 1em 0;">

		<p>New to Folyo</p>

		<%= link_to 'Create free account', new_subscription_path, :class => "button grey" %>
	</div>
<% end %>
