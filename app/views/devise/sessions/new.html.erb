

<section class="sign-in-form">
<h1>Log in to Workshop</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>



		<%= render "devise/shared/links" %>


 	</div>

  <div class="actions" style="margin: 1em 0;">
    <%= f.submit "Log in", :style => "margin-left: 0;" %>
  </div>

  <% if devise_mapping.rememberable? -%>

      <%= f.check_box :remember_me, :style => "margin-right: .6em;" %>
      <%= f.label "Remember me on this computer", :style => "font-size: 14px; font-weight: normal; text-transform: none; letter-spacing: 0;" %>

  <% end -%>
<% end %>


</section>

<div class="new-sign-up"> New to Workshop <a href="/subscriptions/new?plan=2">Sign up</a></div>
