<script>
  $(document).ready(function(){
    $('textarea').autosize();
  });
</script>


<div style="padding: 0;">
<%= form_for([@project, @reply]) do |f| %>

<h3 class="form-header" style="padding-left: .5em;">Who are you, and what do you do?</h3>
	<div style="margin: .5em auto 1em;">
		<div style="font-size: 14px; width: 170px; float:right;">
      <% if current_user.present? %>
        This is your normal bio, but you can edit it just for this reply if you want.
      <% else %>
        Introduce yourself and any relevant work experience that relates to this project.
      <% end %>
		</div>

		<%= f.text_area :biography, data: { max_characters: 200 } %>
	</div>



	<h3 class="form-header" style="padding-left: .5em;">Why would you be a good fit for this project?</h3>
		<div style="margin: .5em auto 1em;">
			<div style="font-size: 14px; width: 170px; float:right;">
				This is where you go into detail about what you can do for this project.
			</div>

			<%= f.text_area :message, data: { max_characters: 200 } %>
		</div>
		
		
		<% if current_user.present? && current_user.can_reply_with_portfolio?(@reply.project) %>
      <div style="border: 3px solid #9d82c8; font-size: 15px; width: 100%; border-radius: 10px;  margin: 1em 0 2em; padding: 0 2em 1em; box-sizing: border-box;">
	
        <%= render "replies/portfolio_upload_form", f: f %>
      </div>
		<% end %>

	<h3 class="form-header" style="padding-left: .5em;">What next steps should the client take?</h3>
		<div style="margin: .5em auto 1em;">
			<div style="font-size: 14px; width: 170px; float:right;">
				What do you need from a client in order to kick off? What's next?
			</div>
			<%= f.text_area :next_steps, data: { max_characters: 200 } %>
		</div>
		
	<div style="text-align:center; width:100%; padding: 0 0;">
		<div style="margin:0; display: table; line-height: 1; text-align:center; width: 100%;">
			<%= f.submit 'Preview + Create Account', class: "button", :style => "margin: .25em 0 0;", 
	      data: { confirm: "Are you sure you want to send this? You won't be able to change your reply." } %>
		</div>
		<p style="margin: .5em 0 .5em;"><small>You'll still be able to edit your message.</small></p>
	</div>
<% end %>
</div>
