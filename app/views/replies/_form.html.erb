<%= form_for([@project, @reply]) do |f| %>
	<%= f.text_area :message, style: "margin: 1em auto; width: 100%;" %>

	<% if current_user.present? && current_user.can_reply_with_portfolio?(@reply.project) %>
		<%= render "replies/portfolio_upload_form", f: f %>
	<% end %>

	<p style="margin: 0; width: 250px; font-size: 13px; color: #666; display: inline-block;"><a href="http://emailsthatwin.com" style="color: #666;"><strong>
		How to write a client-winning message</strong></a></p>

	<%= f.submit 'Send message', class: "button", style: "float: right; margin: -5em 0 10em; display: inline-block;" %>
<% end %>
