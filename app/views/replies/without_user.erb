<div style="width: 700px; margin: 2em auto;  border: 3px solid #8b6eb9; border-radius: 16px;">
	<h3 style="text-align:center; margin: 1em 0 0; margin: 0; padding: .5em 1em .75em; border-bottom: 3px solid #8b6eb9; border-top-left-radius: 16px; border-top-right-radius: 16px;  background-color: #fffef3;">
		Create your profile to finish sending your message!</h3>
		
	<%= form_for @user, url: update_freelancer_details_path, method: :put, id: 'new_user', class: 'form-focus' do |f| %>	
		
		
		<div style="text-align:center;">
	    <%= image_tag(f.object.photo.url, :style => "width:90px; border-radius: 90px; margin: 2em 0 0;") if f.object.photo(:thumb) %>

			<h3 class="form-header" style="margin-top: .25em;">Upload a profile pic</h3>
	    <%= f.file_field :photo, :id => "pictureInput", :style => "width: 100px; margin: 0 auto 0;"	%>
	    <p class="required" style="width:400px; font-size: 14px; margin: 0 auto;">
	      Your picture will appear next to your replies. Square images work best. 190 pixels wide is optimal.
	    </p>
		</div>

		<section style="margin: 1em auto 2em; width: 300px;">
			<%= render "subscriptions/form" %>
		</section>
	</div>
	
	<% end %>
	