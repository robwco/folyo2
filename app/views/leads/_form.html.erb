<%= form_for @lead, html: { multipart: true } do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% @lead.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @approved_lead.nil? %>
	<p>
		This is an RSS lead: <a href="<%= @approved_lead.link %>" target="_blank">Click here to review</a>.
		<input type="hidden" name="approved_link_id" value="<%= @approved_lead.id %>" />
	</p>
  <% end %>

	
  <div style="margin: 0;">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field" style="margin: 0; width: 200px;">
    <%= f.label "Upload a Photo" %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"} %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br>
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :linkedin %><br>
    <%= f.text_field :linkedin %>
  </div>
  <div class="field">
    <%= f.label :budget %><br>
    <p>$ <%= f.text_field :budget, :style => "display:inline; width: 10em;" %></p>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_field :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
