<h1>Workshop-exclusive leads <%= link_to 'New Workshop Exclusive Lead', new_exclusive_path, class: "submit" %></h1>
<table>
  <tbody>

    <% @exclusives.today.most_recently_updated.each do |exclusive| %>
      <% if exclusive.present? %>
        <tr>
          <td style="padding-right: 2em;"><span style="color: #19963C; font-size: 14px; font-weight: 500;">Created Today!</span> <%= link_to exclusive.title, edit_exclusive_path(exclusive) %></td>
          <td><%= link_to 'Destroy', exclusive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>

  </tbody>
  <tbody>
    <th><p style="color: #888888; font-weight: normal; text-align: left;"><br>All Workshop-Exclusive Leads:</p></th>
