  <div class="exclusive">
	<tr>
		<td><%= exclusive.created_at.strftime("%b %-d") %></td>
		<td><%= link_to exclusive.title, exclusive_path(exclusive) %></td>
		<td>$<%= exclusive.budget %></td>
  </tr>
</div>
<% end %>
</table>

